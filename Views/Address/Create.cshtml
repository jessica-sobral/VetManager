@{
    ViewData["Title"] = "Cadastrar endereço";
}

<a href="/Address/Index" class="btn btn-light">< Voltar</a>

<h1 class="mb-3">@ViewData["Title"]</h1>
<p class="mb-4">Utilize o formulário abaixo para cadastrar um novo endereço.</p>

<form action="/Address/Add" method="post" class="row g-3">
    <div class="col-md-2">
        <label for="id" class="form-label">ID</label>
        <input type="text" class="form-control" name="id" id="id" required>
    </div>
    <div class="col-md-3">
        <label for="zipCode" class="form-label">CEP</label>
        <input type="text" class="form-control" name="zipCode" id="zipCode" required>
    </div>
    <div class="col-md-5">
        <label for="street" class="form-label">Rua</label>
        <input type="text" class="form-control" name="street" id="street" required>
    </div>
    <div class="col-md-2">
        <label for="number" class="form-label">Número</label>
        <input type="text" class="form-control" name="number" id="number" required>
    </div>
    <div class="col-md-4">
        <label for="district" class="form-label">Bairro</label>
        <input type="text" class="form-control" name="district" id="district" required>
    </div>
    <div class="col-md-4">
        <label for="city" class="form-label">Cidade</label>
        <input type="text" class="form-control" name="city" id="city" required>
    </div>
    <div class="col-md-4">
        <label for="state" class="form-label">Estado</label>
        <input type="text" class="form-control" name="state" id="state" required>
    </div>
    <div class="col-12 mt-4">
        <button type="submit" class="btn btn-outline-dark">Salvar</button>
    </div>
</form>

@if(TempData["MessageError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
        @TempData["MessageError"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}