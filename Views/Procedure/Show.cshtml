@model VetManager.Models.Procedure

@{
    ViewData["Title"] = $"Procedimento {Model.Id}";
    var patient = ViewData["Patient"] as Patient;
    var doctor = ViewData["Doctor"] as Doctor;
    var hospital = ViewData["Hospital"] as Hospital;
}

<a href="/Procedure/Index" class="btn btn-light">< Voltar</a>

<h1 class="mb-4">@ViewData["Title"]</h1>

<p><strong>ID:</strong> @Model.Id</p>
<p><strong>Paciente:</strong> ID: @patient.Id | Nome: @patient.Name | Idade: @patient.GetAge() | Espécie: @patient.Species | Tipo sanguíneo: @patient.BloodType | ID do tutor: @patient.TutorId</p>
<p><strong>Médico:</strong> ID: @doctor.Id | Nome: @doctor.Name | Especialidade: @doctor.Speciality | Telefone: @doctor.Telephone</p>
<p><strong>Hospital:</strong> ID: @hospital.Id | Nome: @hospital.Name | Telefone: @hospital.Telephone1 | ID do endereço: @hospital.AddressId</p>
<p><strong>Data e hora:</strong> @Model.DateTime</p>
<p><strong>Tipo:</strong> @Model.Type</p>
<p><strong>Descrição:</strong> @Model.Description</p>

<a href="/Procedure/Update/@Model.Id" class="btn btn-outline-primary mt-2">
    Atualizar
</a>

<a href="/Procedure/Delete/@Model.Id" class="btn btn-danger ms-3 mt-2">
    Remover
</a>

@if (TempData["MessageSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
        @TempData["MessageSuccess"]<button type="button" class="btn-close" data-bs-dismiss="alert"
        aria-label="Close"></button>
    </div>
}