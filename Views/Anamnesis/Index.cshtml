@model IEnumerable<VetManager.Models.Anamnesis>

@{
    ViewData["Title"] = "Anamnese";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<a href="/Anamnesis/Create" class="btn btn-outline-dark mb-3">
    Cadastrar Anamnese
</a>

@if (Model.Count() == 0)
{
    <p>Nenhuma Anamnese cadastrada.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">PacienteId</th>
                <th scope="col">Sintomas</th>
                <th scope="col">Diagn√≥stico</th>
                <th scope="col">Observations</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (var anamnesis in Model)
            {
                <tr>
                    <th scope="row">@anamnesis.Id</th>
                    <td>@anamnesis.PatientId</td>
                    <td>@anamnesis.Symptoms</td>
                    <td>@anamnesis.Diagnosis</td>
                    <td>@anamnesis.Observations</td>
                    <td>
                        <a href="/Anamnesis/Show/@anamnesis.Id" class="btn btn-outline-dark">
                            Detalhes
                        </a>
                    </td>
                    <td>
                        <a href="/Anamnesis/Update/@anamnesis.Id" class="btn btn-outline-dark">
                            Atualizar
                        </a>
                    </td>
                    <td>
                        <a href="/Anamnesis/Delete/@anamnesis.Id" class="btn btn-outline-dark">
                            Remover
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (TempData["MessageSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
        @TempData["MessageSuccess"]<button type="button" class="btn-close" data-bs-dismiss="alert"
        aria-label="Close"></button>
    </div>
}
@if (TempData["MessageError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
        @TempData["MessageError"]<button type="button" class="btn-close" data-bs-dismiss="alert"
        aria-label="Close"></button>
    </div>
}