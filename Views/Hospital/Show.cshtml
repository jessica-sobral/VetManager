@model VetManager.Models.Hospital

@{
    ViewData["Title"] = $"Hospital {Model.Name}";
   var address = ViewData["Address"] as Address;
}

<a href="/Hospital/Index" class="btn btn-light">< Voltar</a>

<h1 class="mb-4">@ViewData["Title"]</h1>

<p><strong>ID:</strong> @Model.Id</p>
<p><strong>Nome da unidade:</strong> @Model.Name</p>
<p><strong>Telefones:</strong> @Model.Telephone1, @Model.Telephone2</p>
<p><strong>Endereço:</strong> @address.Street, @address.Number - @address.District, @address.City - @address.ZipCode.</p>
<p><strong>ID do endereço:</strong> @Model.AddressId</p>

<a href="/Hospital/Update/@Model.Id" class="btn btn-outline-primary mt-2">
    Atualizar
</a>

<a href="/Hospital/Delete/@Model.Id" class="btn btn-danger ms-3 mt-2">
    Remover
</a>

@if (TempData["MessageSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
        @TempData["MessageSuccess"]<button type="button" class="btn-close" data-bs-dismiss="alert"
        aria-label="Close"></button>
    </div>
}
