@{
    ViewData["Title"] = "Cadastrar paciente";
}

<h1 class="mb-3">@ViewData["Title"]</h1>
<p class="mb-4">Utilize o formulário abaixo para cadastrar um novo paciente.</p>

<form action="/Patient/Add" method="post" class="row g-3">
    <div class="col-md-2">
        <label for="id" class="form-label">ID</label>
        <input type="text" class="form-control" name="id" id="id" required>
    </div>
    <div class="col-md-10">
        <label for="name" class="form-label">Nome do paciente</label>
        <input type="text" class="form-control" name="name" id="name" required>
    </div>
    <div class="col-md-5">
        <label for="birthDate" class="form-label">Data de Nascimento</label>
        <input type="date" class="form-control" name="birthDate" id="birthDate" required>
    </div>
    <div class="col-md-5">
        <label for="species" class="form-label">Espécie</label>
        <input type="text" class="form-control" name="species" id="species" required>
    </div>
    <div class="col-md-2">
        <label for="bloodType" class="form-label">Tipo sanguíneo</label>
        <input type="text" class="form-control" name="bloodType" id="bloodType">
    </div>
    <div class="col-md-2">
        <label for="tutorId" class="form-label">ID tutor</label>
        <input type="text" class="form-control" name="tutorId" id="tutorId" required>
    </div>
    <div class="col-12 mt-4">
        <button type="submit" class="btn btn-outline-dark">Salvar</button>
    </div>
</form>

@if(TempData["MessageError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
        @TempData["MessageError"]<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}